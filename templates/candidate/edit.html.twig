{% extends 'base.html.twig' %}

{% block title %}Edit Candidate
{% endblock %}

{% block body %}
	<!-- Page Content-->
	<section class="gray-bg">
		<div class="container">
			<div class="row">
				<div class="score-container">
					<h4>
						<img src="https://i.imgur.com/s9bPVaK.gif" style="height: 80px; width: 201px;">
						&nbsp;
																																																                            &nbsp; Hooray ! Your profile is complete.
					</h4>
					<div class="c100 p100 small complete ">
						<span>{{progressValue}}</span>
						<div class="slice">
							<div class="bar"></div>
							<div class="fill"></div>
						</div>
					</div>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</section>

	<form method="{{ path('app_candidate_edit', {'id': candidate.id}) }}" action="#!" accept-charset="UTF-8" id="candidateForm" role="form" data-parsley-validate="" enctype="multipart/form-data"><input name="_token" type="hidden" value="UYfchy67WuTVzhSstPK1RDZEIfgqpKCcLnLyhf8a">
		<section class="section-padding">
			<div class="container">
				<div class="row">
					<h3 class="text-extrabold">Your personal informations</h3>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							<select id="gender" name="gender" style="display: block !important;">
								<option value="">Choose an option...</option>
								{% for gender in genders %}
									{% if gender.id is defined %}
										<option value="{{ gender.id }}">
											{{ gender.name }}
										</option>
									{% endif %}
								{% endfor %}
							</select>
							<label for="gender" class="active">Gender</label>
						</div>
					</div>
					<div class="clearfix visible-sm"></div>
					{{ form_start(form) }}

					<!-- Informations personnelles -->
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							{{ form_row(form.first_name, {'attr': {'id': 'first_name'}}) }}
							
						</div>
					</div>

					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							{{ form_row(form.last_name, {'attr': {'id': 'last_name'}}) }}
							<label for="last_name">Last name</label>
						</div>
					</div>

					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="input-field">
							{{ form_row(form.current_location, {'attr': {'id': 'current_location'}}) }}
							
						</div>
					</div>

					<div class="col-xs-12 col-sm-8">
						<div class="input-field">
							{{ form_row(form.adress, {'attr': {'id': 'adress'}}) }}
							
						</div>
					</div>

					<!-- Photo -->
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="file-field input-field" style="margin-top: 32px;">
							<div class="btn btn-lg primary waves-effect waves-light">
								<span>
									<i class="material-icons">insert_photo</i>
									Photo</span>
							</div>

							<div class="existing-file">
								<a href="#!" target="_blank">
									<i class="material-icons">&#xE24D;</i>
									profil_picture.jpg</a>
							</div>
							<div class="file-path-wrapper">
								<input class="file-path validate" type="text" placeholder="Upload your ID photo" readonly>
							</div>
						</div>
					</div>

					<!-- Informations supplÃ©mentaires -->
					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_row(form.country, {'attr': {'id': 'country'}}) }}
						
						</div>
					</div>

					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_row(form.nationality, {'attr': {'id': 'nationality'}}) }}
						
						</div>
					</div>

					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_row(form.birth_at, {'attr': {'id': 'birth_at'}}) }}
						
						</div>
					</div>

					<div class="col-xs-12 col-sm-6">
						<div class="input-field">
							{{ form_row(form.place_of_birth, {'attr': {'id': 'place_of_birth'}}) }}
							
						</div>
					</div>

					<!-- Passport -->
					<div class="col-xs-12 col-sm-6">
						<div class="card card-panel passport_file">
							<div class="file-field input-field">
								<div class="btn btn-lg primary waves-effect waves-light">
									<span>
										<i class="material-icons">&#xE24D;</i>
										Passport</span>
								</div>

								<div class="existing-file">
									<a href="#!" target="_blank">
										<i class="material-icons">&#xE24D;</i>
										passeport.jpg</a>
								</div>
								<div class="file-path-wrapper">
									<input class="file-path validate" type="text" placeholder="Upload your passport" readonly>
								</div>
							</div>
						</div>
					</div>

					<div class="col-xs-12 col-sm-6">
						<div class="col-xs-12 col-sm-12">
							<div class="input-field" style="margin-top: 5px;">
								<select id="candidate_category" name="candidate[category][]" multiple data-placeholder="Type in or Select job sector you would be interested in." style="display: block;">
									{% for category in categories %}
										<option value="{{ category.id }}">{{ category.name }}</option>
									{% endfor %}
								</select>

								<label class="active required" for="candidate_category">Interest in job sector</label>
							</div>
							<div class='red-text'></div>
						</div>
						<div class="col-xs-12 col-sm-12">
							<div class="input-field">
								<select id="experience" required="required" name="experience">
									<option value="">Choose</option>
									{% for experience in experiences %}
										<option value="{{ experience.id }}">{{ experience.name }}</option>
									{% endfor %}
								</select>
							</div>

							<label for="experience" class="active">Experience</label>
						</div>
					</div>
				</div>
				<div class="col-xs-12 col-sm-12">
					<div class="input-field">
						{{ form_row(form.short_description, {'attr': {'id': 'short_description'}}) }}
						
					</div>
				</div>

			</div>
		</div>
	</section>

	<section class="section-padding gray-bg">
		<div class="container">
			<div class="row">
				<h3 class="text-extrabold">Your K-Yachting account</h3>
				<div class="col-xs-12 col-sm-4">
					<div class="input-field">
						<input required="required" id="email" name="email" type="email" value="">
						<label for="email">Email</label>
					</div>
				</div>
				<div class="col-xs-12 col-sm-4">
					<div class="input-field">
						<input id="password" name="password" type="password" value="">
						<label for="password">Change your password here</label>
					</div>
				</div>
				<div class="col-xs-12 col-sm-4">
					<div class="input-field">
						<input id="password_repeat" name="password_repeat" type="password" value="">
						<label for="password_repeat">Confirm your new password</label>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 mt-40 mb-80 delete-account">
					<a href="#!" onclick="return prompt('Please Type \'Delete my account\' to delete your K-Yachting Services account:') == 'Delete my account'" class="btn btn-block btn-lg waves-effect waves-light">
						<i class="material-icons">&#xE872;</i>Delete my account</a>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-4">
					<a href="#!" class="btn btn-block btn-lg border primary waves-effect waves-light">
						<i class="fa fa-long-arrow-left"></i>
						Back home</a>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
					<button type="submit" class="btn btn-block btn-lg gradient secondary waves-effect waves-light">
						<span>
							<strong>UPDATE</strong>
							NOW</span>
					</button>
				</div>
			</div>

		</div>
	</section>
</form></div>{% endblock %}
