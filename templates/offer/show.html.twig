{% extends 'base.html.twig' %}

{% block title %}Offer
{% endblock %}

{% block body %}
	<h1>Offer</h1>

	<!-- Page Content-->
	<section class="single-project-section section-padding light-gray-bg">
		<div class="container">
			<div class="project-overview">
				<div class="row mb-80">
					<div class="col-xs-12 col-md-8">
						<p class="ref grey-text no-margin">Ref.
							{{ offer.reference }}</p>
						<h2>{{ offer.jobTitle }}</h2>
						<p>{{ offer.description }}</p>
					</div>
					<div class="col-xs-12 col-md-4 quick-overview">
						<ul class="portfolio-meta">
							<li>
								<span>Published at</span>
								{{ offer.createdAt ? offer.createdAt|date('d F Y') : 'N/A' }}
							</li>
							<li>
								<span>Position</span>
								{{ offer.jobTitle }}
							</li>
							<li>
								<span>Contract Type</span>Full Time
							</li>
							<li>
								<span>Salary</span>
								{{ offer.salary }}
								&euro;
							</li>
							<li>
								<span>Location</span>
								{{ offer.jobLocation }}
							</li>
							<li>
								<span>Starting date</span>
								{{ offer.createdAt ? offer.createdAt|date('Y-m-d') : 'N/A' }}
							</li>
						</ul>
					<a class="btn btn-block gradient primary mt-30 waves-effect waves-light" href="{{ path('app_application_new', {'id': offer.getId()}) }}">Apply for this job</a>


						<div class="btn btn-block btn-success mt-30 waves-effect waves-light disabled">You have applied for this job</div>
					</div>
				</div>
			</div>

			<nav class="single-post-navigation no-margin" role="navigation">
				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-4">
						<div class="previous-post-link">
							{% if previousOffer %}
								<a class="btn border primary waves-effect waves-dark" href="{{ path('app_offer_show', {'id': previousOffer.id}) }}">
									<i class="fa fa-long-arrow-left"></i>Previous
								</a>
							{% endif %}
						</div>
					</div>
					<div class="hidden-xs hidden-sm col-md-4"></div>
					<div class="col-xs-6 col-sm-6 col-md-4">
						<div class="next-post-link">
							{% if nextOffer %}
								<a class="btn border primary waves-effect waves-dark" href="{{ path('app_offer_show', {'id': nextOffer.id}) }}">
									Next
									<i class="fa fa-long-arrow-right"></i>
								</a>
							{% endif %}
						</div>
					</div>
				</div>
			</nav>
		</div>
	</section>
{% endblock %}